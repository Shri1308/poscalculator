    <input type="number" id="card" placeholder="Enter amount">
    
    <label for="variant">Account Variant</label>
    <select id="variant">
        <option value="10">â‚¹50K Variant (10%)</option>
        <option value="12">â‚¹1 Lac Variant (12%)</option>
        <option value="15">â‚¹2 Lac Variant (15%)</option>
    </select>
    
    <button onclick="calculateSavings()">Calculate Savings</button>
    
    <div class="result" id="result"></div>
