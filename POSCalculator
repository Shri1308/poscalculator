<script>
function calculateSavings() {
    let upi = parseFloat(document.getElementById("upi").value);
    let card = parseFloat(document.getElementById("card").value);
    let variantPercent = parseFloat(document.getElementById("variant").value);

    if (isNaN(upi) || isNaN(card) || upi <= 0 || card <= 0) {
        document.getElementById("result").innerHTML = "Please enter valid amounts.";
        return;
    }

    // Step 1: Calculate free card transaction limit
    let freeLimit = (upi * variantPercent) / 100;

    // Step 2: Calculate card amount that will be charged
    let chargeableAmount = card - freeLimit;
    if (chargeableAmount < 0) chargeableAmount = 0;

    // Step 3: MDR charges without program
    let mdrWithout = card * 0.015;

    // Step 4: MDR charges with program
    let mdrWith = chargeableAmount * 0.015;

    // Step 5: Savings
    let savings = mdrWithout - mdrWith;

    document.getElementById("result").innerHTML = `
        <p>Free Card Limit: â‚¹${freeLimit.toFixed(2)}</p>
        <p>MDR Without Program: â‚¹${mdrWithout.toFixed(2)}</p>
        <p>MDR With Program: â‚¹${mdrWith.toFixed(2)}</p>
        <p style="color:green;">ðŸ’° Savings: â‚¹${savings.toFixed(2)}</p>
    `;
}
</script>

