<body>
  <div class="container">
    <h2>MDR Savings Comparison</h2>

    <label for="upi">UPI Collection Last Month (â‚¹):</label>
    <input type="number" id="upi" placeholder="e.g. 100000">

    <label for="card">Card Collection This Month (â‚¹):</label>
    <input type="number" id="card" placeholder="e.g. 50000">

    <label for="current">Current Account Variant:</label>
    <select id="current">
      <option value="50K">50K</option>
      <option value="1L">1L</option>
      <option value="2L">2L</option>
    </select>

    <label for="upgrade">Compare With (Upgraded Variant):</label>
    <select id="upgrade">
      <option value="50K">50K</option>
      <option value="1L">1L</option>
      <option value="2L">2L</option>
    </select>

    <button onclick="compare()">Compare Savings</button>

    <div class="result" id="output"></div>
  </div>

  <script>
    function compare() {
      const upi = parseFloat(document.getElementById("upi").value);
      const card = parseFloat(document.getElementById("card").value);
      const current = document.getElementById("current").value;
      const upgrade = document.getElementById("upgrade").value;

      if (isNaN(upi) || isNaN(card)) {
        document.getElementById("output").innerHTML = "Please enter valid numbers.";
        return;
      }

      const limits = { "50K": 0.10, "1L": 0.12, "2L": 0.15 };
      const mdrRate = 0.015;

      const currentFree = upi * limits[current];
      const upgradeFree = upi * limits[upgrade];

      const currentChargeable = Math.max(0, card - currentFree);
      const upgradeChargeable = Math.max(0, card - upgradeFree);

      const currentSavings = currentChargeable * mdrRate;
      const upgradeSavings = upgradeChargeable * mdrRate;

      const benefit = currentSavings - upgradeSavings;

      document.getElementById("output").innerHTML = `
        <strong>Current Variant (${current}):</strong><br>
        Free Limit: â‚¹${currentFree.toFixed(2)}<br>
        Chargeable Amount: â‚¹${currentChargeable.toFixed(2)}<br>
        MDR Charges: â‚¹${currentSavings.toFixed(2)}<br><br>

        <strong>Upgraded Variant (${upgrade}):</strong><br>
        Free Limit: â‚¹${upgradeFree.toFixed(2)}<br>
        Chargeable Amount: â‚¹${upgradeChargeable.toFixed(2)}<br>
        MDR Charges: â‚¹${upgradeSavings.toFixed(2)}<br><br>

        <span class="highlight">ðŸ’° Potential Savings by Upgrading: â‚¹${benefit.toFixed(2)}</span>
      `;
    }
  </script>
